dp CoPro(
   in datain : ns(32);
   in cmd : ns(32);
   in datainrdy : ns(1);
   out dataout : ns(32);
   out dataoutrdy : ns(1);
   in stall : ns(1) // true if the slave is currently busy (with handshaking) and cannot receive new data.
   ){
   sig enable : ns(1);
   sig addA, addB, addOut, subOut, chainOut, BSOut : ns(32);
   reg datainrdyr : ns(1);
   reg datainr : ns(32);
   reg dataoutr : ns(32);
   reg stallr : ns(1);

   use adder32(addA, addB, addOut);
   use sub32(addOut, chainOut, subOut);
   use BitShift(subOut, BSOut);
   use registerchain32(addA, enable, chainOut);
   use registersum(subOut, enable, addB);
   
   
   $trace(enable, "traces/enable.seq");
   $trace(addA, "traces/addA.seq");
   $trace(dataout, "traces/dataout.seq");
   $trace(dataoutrdy, "traces/dataoutrdy.seq");
   $trace(stallr, "traces/stallr.seq");
   
   always{
       stallr = stall;
       addA = datain;
       dataout = BSOut;
       enable = datainrdy; // if store word use datain as data to be stored, if load word, just set idata to 0
       //$display($dec, "Cycle: ", $cycle);
       //$display($dec, "   address: ", address);
   }
   
   sfg captureData{
       dataoutrdy = 0; 
       datainrdyr = datainrdy;
       datainr = datain;
       //cmdr = cmd;
   }
   
   sfg awaithandshake{
      dataoutrdy = 0;
   }
   
   sfg resetAndSignalRdy{
     dataoutrdy = 1;
     datainrdyr = 0;
   }
   
   sfg nothing{
       dataoutrdy = 0; 
   }
   
}

fsm CoPro_cntrl(CoPro){
   initial s0;
   state s1;
   
   @s0 if (datainrdyr == 1 & stallr == 0) then (resetAndSignalRdy) -> s0;
       else if (datainrdyr == 1 & stallr == 1) then (nothing) -> s1;
       else (captureData) -> s0;
   @s1 if (stallr == 0) then (resetAndSignalRdy) -> s0;
       else (awaithandshake) -> s1;
       
}
